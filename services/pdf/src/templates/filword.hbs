<div class="header">
    <h1>{{title}}</h1>
    {{#unless isAnswerPage}}
    <div class="words-list">
        <strong>Найди слова: {{#each words}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}.</strong>
    </div>
    {{/unless}}
</div>

<div class="grid-container">
    <div class="filword-grid grid-{{gridSize}} font-{{fontSize}}">
        {{#each grid}}
        <div class="grid-row">
            {{#each this}}
            <div class="grid-cell{{#if isPartOfWord}} word-part{{/if}}" {{#if wordId}}data-word-id="{{wordId}}"{{/if}}>
                {{letter}}
            </div>
            {{/each}}
        </div>
        {{/each}}
    </div>
</div>

{{#unless isAnswerPage}}
<div class="writing-lines">
    <h3>Найденные слова:</h3>
    <div class="lines-container">
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
    </div>
</div>
{{/unless}}

{{#if isAnswerPage}}
<div style="margin-top: 8mm; text-align: center;">
    <div style="font-size: 12px; color: #666;">
        <strong>Найденные слова выделены жёлтым цветом</strong>
    </div>
</div>
{{/if}}